ins"},{"isHeader":false,"content":"500 g water"},{"isHeader":false,"content":"190 g potatoes, peeled, cut in pieces (4 cm)"},{"isHeader":false,"content":"170 g onions, quartered"},{"isHeader":false,"content":"20 g olive oil"},{"isHeader":false,"content":"2 garlic cloves"},{"isHeader":false,"content":"10 g fresh flat-leaf parsley, leaves only"},{"isHeader":false,"content":"100 g chick peas, tinned, rinsed, drained"},{"isHeader":false,"content":"20 g tomato purée"},{"isHeader":false,"content":"1 Tbsp Dijon mustard"},{"isHeader":false,"content":"1 Tbsp smoked paprika"},{"isHeader":false,"content":"1 tsp fine sea salt, or to taste"},{"isHeader":false,"content":"½ tsp ground cumin"},{"isHeader":false,"content":"½ tsp ground pepper"},{"isHeader":false,"content":"1 - 2 pinches ground cayenne pepper, to taste"}],"nutrition":["per 1 portion","627 kJ \/ 150 kcal","4.9 g","20.4 g","5.4 g"],"hintsAndTricks":[],"basicInfo":["easy","20m","1h 30m","6 portions"]}