ice","ingredients":[{"isHeader":true,"content":"Ingredients"},{"isHeader":true,"content":"Base"},{"isHeader":false,"content":"120 g unsalted butter, softened, plus extra for greasing"},{"isHeader":false,"content":"120 g self-raising flour"},{"isHeader":false,"content":"120 g raw sugar"},{"isHeader":false,"content":"80 g desiccated coconut"},{"isHeader":true,"content":"Caramel filling"},{"isHeader":false,"content":"790 g sweetened condensed milk"},{"isHeader":false,"content":"120 g unsalted butter, softened"},{"isHeader":false,"content":"100 g golden syrup"},{"isHeader":true,"content":"Topping"},{"isHeader":false,"content":"150 g dark chocolate, broken into pieces (3-4 cm)"},{"isHeader":false,"content":"20 g unsalted butter, softened"},{"isHeader":false,"content":"coarse salt, for sprinkling"}],"nutrition":["per 1 slice","1203 kJ \/ 286 kcal","3 g","33 g","15 g"],"hintsAndTricks":["If you are making this for children, omit the coarse salt at the end."],"basicInfo":["easy","20m","2h 40m","24 slices"]}